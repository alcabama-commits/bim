{
  "name": "ifc-converter-tool",
  "version": "1.0.0",
  "description": "Tool to convert IFC to FRAG+JSON",
  "main": "electron-main.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "app": "electron .",
    "dist": "electron-builder",
    "package": "electron-packager . --overwrite --platform=win32 --arch=x64 --out=release-builds --prune=true"
  },
  "build": {
    "appId": "com.bim.converter",
    "productName": "IFC Converter Tool",
    "win": {
      "target": "nsis"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map",
      "!package-lock.json"
    ]
  },
  "dependencies": {
    "@thatopen/fragments": "^3.2.13",
    "adm-zip": "^0.5.10",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "web-ifc": "^0.0.74"
  },
  "devDependencies": {
    "electron": "^34.0.1",
    "electron-builder": "^26.7.0",
    "electron-packager": "^17.1.2"
  }
}
